<div class="container">
       <!--     inscription  -->
    <div class="enregistrer">
        <h4> Sign Up</h4>
        <form action="/sign-up" method="POST" class="signup">

            <div class="form-group  nameFront">
                <label for="exampleInputUsername" name="username" >Username</label>
                <input class="input"  name="usernameFront" type="text" class="form-control" placeholder="nom" >
            </div>

            <div class="form-group mailFront">
                <label for="exampleInputEmail1">Email</label>
                <input class="input" name="emailFront" type="email" class="form-control" aria-describedby="emailHelp" placeholder="email">
              </div>

            <div class="form-group passFront">
                <label for="exampleInputPassword1">Password</label>
                <input  class="input" name="passwordFront" type="password" class="form-control" placeholder="password">
            </div>
                <!-- <a class="btn" href="/"> inscription</a> -->
                <button type="submit" class="btu-inscrit"> enregistrement</button>

        </form>

    </div>
   


   <!--      connection -->
    <div class="connect">
